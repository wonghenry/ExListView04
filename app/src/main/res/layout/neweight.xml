<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">
    <ScrollView
        android:background="@drawable/test5"
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.98">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="(觀 音 靈 感 真 言)"
                android:textColor="#A52A2A"
                android:id="@+id/textView15"
                android:textSize="15pt"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"/>
            <TextView  android:textColor="#141414"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="唵 。"
                android:id="@+id/textView16"
                android:textSize="13pt"
                android:layout_below="@+id/textView15"
                android:layout_alignRight="@+id/textView15"
                android:layout_alignEnd="@+id/textView15"
                android:gravity="center_horizontal"/>
            <TextView  android:textColor="#141414"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="嘛 呢 叭 彌 吽 。"
                android:id="@+id/textView17"
                android:textSize="13pt"
                android:layout_below="@+id/textView16"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"/>
            <TextView  android:textColor="#141414"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="麻 葛 倪 牙 納 。"
                android:id="@+id/textView18"
                android:textSize="13pt"
                android:layout_below="@+id/textView16"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"/>
            <TextView  android:textColor="#141414"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="積 都 特 巴 達 。"
                android:id="@+id/textView19"
                android:textSize="13pt"
                android:layout_below="@+id/textView16"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"/>
            <TextView  android:textColor="#141414"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="積 特 些 納 。"
                android:id="@+id/textView20"
                android:textSize="13pt"
                android:layout_below="@+id/textView16"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"/>
            <TextView  android:textColor="#141414"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="微 達 哩 葛 。"
                android:id="@+id/textView21"
                android:textSize="13pt"
                android:layout_below="@+id/textView16"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"/>
            <TextView  android:textColor="#141414"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="薩 而 斡 而 塔 。 "
                android:id="@+id/textView22"
                android:textSize="13pt"
                android:layout_below="@+id/textView16"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"/>
            <TextView  android:textColor="#141414"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="卜 里 悉 塔 葛 。"
                android:id="@+id/textView23"
                android:textSize="13pt"
                android:layout_below="@+id/textView16"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"/>
            <TextView  android:textColor="#141414"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="納 補 囉 納 。"
                android:id="@+id/textView28"
                android:textSize="13pt"
                android:layout_below="@+id/textView16"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"/>
            <TextView  android:textColor="#141414"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="納 卜 哩 。"
                android:id="@+id/textView24"
                android:textSize="13pt"
                android:layout_below="@+id/textView16"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"/>
            <TextView  android:textColor="#141414"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="丟 忒 班 納 。"
                android:id="@+id/textView25"
                android:textSize="13pt"
                android:layout_below="@+id/textView16"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"/>
            <TextView  android:textColor="#141414"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="奈 麻 嚧 吉 。"
                android:id="@+id/textView26"
                android:textSize="13pt"
                android:layout_below="@+id/textView16"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"/>
            <TextView  android:textColor="#141414"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="說 囉 耶 莎 訶 。"
                android:id="@+id/textView27"
                android:textSize="13pt"
                android:layout_below="@+id/textView16"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"/>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffcc">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="播放MP3"
            android:background="@drawable/btn_blue"
            android:id="@+id/btnplay6"
            android:textSize="13pt"
            android:onClick="onMpPlay"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回目錄"
            android:background="@drawable/btn_blue"
            android:id="@+id/button15"
            android:textSize="13pt"

            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="gobackoutline8" />
        <ImageView
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:src="@drawable/flower3"/>

    </LinearLayout>


</LinearLayout>


